@font-face
  font-family 'GohuFont'
  src url('../../gohufont-uni-14.ttf')

@font-face
  font-family 'Apple'
  src url('../../Apple.ttf')

// Fonts
$font-family-body = "Apple", "GohuFont", "Menlo", "Meslo LG", monospace
$font-family-mono = "Apple", "GohuFont", "Menlo", "Meslo LG", monospace
$font-family-tt =  "Inconsolata", monospace
$font-size = 12px
$line-height = 1.725

// Colors
$color-background = #1d1f21
$color-link = #61C294
$color-text = #c9cacc
$color-light = #cccccc
$color-lightest = #eeeeee
$color-accent = #7E57C2
$ease-in-sine = cubic-bezier(0.47, 0, 0.745, 0.715)

// Logo
logo-width = 0px + hexo-config("customize.logo.width")
logo-height = 0px + hexo-config("customize.logo.height")

// Code Highlight
highlight = hexo-config("customize.highlight") || "tomorrow-night"
